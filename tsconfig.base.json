{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    // Paths para monorepo, se seus pacotes se importam com @/
    // Se shared-types n√£o usa alias interno, pode remover baseUrl e paths daqui
    // e configurar nos tsconfig.json de apps/api e apps/web se eles usarem @/
    "baseUrl": ".",
    "paths": {
      "@/": [""] // Geralmente apps/api/src/* e apps/web/src/*
    }
  },
  "exclude": ["node_modules", "dist", "**/.spec.ts", "**/.test.ts"]
}
